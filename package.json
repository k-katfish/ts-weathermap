{
  "name": "ts-weathermap",
  "version": "1.0.1",
  "description": "Similar to the old PHP Network Weathermap project, but modern and written in TypeScript.",
  "license": "MIT",
  "author": "k-katfish",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "build": "esbuild src/backend.ts --bundle --platform=node --format=cjs --external:canvas --outdir=dist && esbuild src/frontend/main.ts --bundle --outfile=src/frontend/main.js",
    "start": "node dist/backend.js",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "express": "^4.21.2",
    "js-yaml": "^4.1.0",
    "net-snmp": "^3.11.1",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.25",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.9.0",
    "@types/ws": "^8.5.10",
    "esbuild": "^0.24.0",
    "typescript": "^5.9.3"
  }
}